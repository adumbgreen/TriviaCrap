<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="me.klayderpus.triviacrack">

    <uses-sdk android:minSdkVersion="15" />

    <application android:icon="@drawable/icon"
                 android:label="@string/app_name"
                 android:allowBackup="true">
        <meta-data android:name="xposedmodule"
                   android:value="true" />

        <meta-data android:name="xposeddescription"
                   android:value="Intercepts Trivia Crack questions and shows a toast with the correct answer" />

        <meta-data
                android:name="xposedminversion"
                android:value="54" />

        <activity android:name=".SettingsActivity" android:label="@string/activity_settings_label">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
