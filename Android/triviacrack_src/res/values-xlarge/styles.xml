<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/white_button_background</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:lines">1</item>
    </style>
    <style name="LoginChooseTitle" parent="@style/PrimaryFontRegular">
        <item name="android:textSize">@dimen/login_choose_facebook_text</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_marginTop">@dimen/login_choose_facebook_account_margin_top</item>
    </style>
    <style name="LoginFacebookSubtext">
        <item name="android:textSize">@dimen/login_choose_facebook_subtext</item>
        <item name="android:visibility">visible</item>
    </style>
</resources>
