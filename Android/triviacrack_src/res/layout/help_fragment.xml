<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:clickable="true" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:emx="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/background_layout" />
    <RelativeLayout android:id="@id/help_header" style="@style/NavBarHeaderTheme">
        <com.etermax.tools.widget.CustomFontTextView android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/help" style="@style/SettingsHeaderTitle" />
    </RelativeLayout>
    <View android:id="@id/navbar_divider" android:layout_width="fill_parent" android:layout_height="1.0dip" android:layout_below="@id/help_header" style="@style/NavbarDividerTheme" />
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/navbar_divider">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <com.etermax.tools.widget.CustomFontTextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/help_section_margin_1" android:text="@string/learn_how_to_play" style="@style/HelpSectionHeader" />
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" style="@style/SettingsSectionBodyStyle">
                <com.etermax.preguntados.ui.help.HelpItem android:id="@id/help_rules_link" android:layout_width="wrap_content" android:layout_height="wrap_content" emx:help_title="@string/rule_book" emx:help_subtitle="@string/subtitle_help_1" />
                <View android:background="@color/grayLighter" android:layout_width="fill_parent" android:layout_height="1.0dip" />
                <com.etermax.preguntados.ui.help.HelpItem android:id="@id/help_learn_link" android:layout_width="wrap_content" android:layout_height="wrap_content" emx:help_title="@string/learn_how_to_play" emx:help_subtitle="@string/subtitle_help_0" />
                <View android:background="@color/grayLighter" android:layout_width="fill_parent" android:layout_height="1.0dip" />
                <com.etermax.preguntados.ui.help.HelpItem android:id="@id/help_shop_link" android:layout_width="wrap_content" android:layout_height="wrap_content" emx:help_title="@string/shop_and_extras" emx:help_subtitle="@string/shop_and_extras_txt" />
            </LinearLayout>
            <com.etermax.tools.widget.CustomFontTextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/help_section_margin_2" android:text="@string/general" style="@style/HelpGeneralSectionHeader" />
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" style="@style/SettingsSectionBodyStyle">
                <com.etermax.preguntados.ui.help.HelpItem android:id="@id/help_customer_link" android:layout_width="wrap_content" android:layout_height="wrap_content" emx:help_title="@string/customer_support" emx:help_subtitle="@string/send_feedback" />
                <View android:background="@color/grayLighter" android:layout_width="fill_parent" android:layout_height="1.0dip" />
                <com.etermax.preguntados.ui.help.HelpItem android:id="@id/help_account_link" android:layout_width="wrap_content" android:layout_height="wrap_content" emx:help_title="@string/account_info" emx:help_subtitle="@string/subtitle_help_2" />
                <View android:background="@color/grayLighter" android:layout_width="fill_parent" android:layout_height="1.0dip" />
                <com.etermax.preguntados.ui.help.HelpItem android:id="@id/help_terms_link" android:layout_width="wrap_content" android:layout_height="wrap_content" emx:help_title="@string/terms_of_use" emx:help_subtitle="@string/subtitle_help_4" />
                <View android:background="@color/grayLighter" android:layout_width="fill_parent" android:layout_height="1.0dip" />
                <com.etermax.preguntados.ui.help.HelpItem android:id="@id/help_privacy_link" android:layout_width="wrap_content" android:layout_height="wrap_content" emx:help_title="@string/privacy_policy" emx:help_subtitle="@string/subtitle_help_5" />
                <View android:background="@color/grayLighter" android:layout_width="fill_parent" android:layout_height="1.0dip" />
                <com.etermax.preguntados.ui.help.HelpItem android:id="@id/help_about_link" android:layout_width="wrap_content" android:layout_height="wrap_content" emx:help_title="@string/about_info" emx:help_subtitle="@string/about_info_txt" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>